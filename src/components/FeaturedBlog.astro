---
interface Props {
  post: any;
}

const { post } = Astro.props;
const { title, date, author, category, image } = post.data;
const arrayCategories = category.split('|');
---

<article class="blog-post" id={`blogPost-${post.slug}`} data-id={post.slug} style={`background-image: url('/src/assets/posts/${image}');`}>
    <a href={`/blog/${post.slug}`}>
        <div class="img-container">
        </div>
        <div class="article-info">
            <h3>{title}</h3>
        <p>{date.toLocaleDateString('es-ES', { dateStyle: 'long' })}</p>
        <p>{author}</p>
        <div class="categories">
            {
                arrayCategories.map((category: any) => {
                    return (
                        <span class="category">{category}</span>
                    )
                })
            }
        </div>
        </div>
    </a>
    
    <div class="underline"></div>
    
</article>

<style>

a{
    text-decoration: none;
}

@keyframes appear {
        from {
            opacity: 0.1;
            scale: 0.8;
        }
        to {
            opacity: 1;
            scale: 1;
        }

    }
    .categories{
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 5px;
        
        .category{
            background-color: #4d8b6c;
            padding: 3px 5px;
            border-radius: 5px;
            color: white;
            font-size: 10px;
            font-weight: bold;
        }
    }

    .blog-post {
        display: flex;
        flex-direction: column;
        position: relative;
        border: 1px solid #e8f0eb;
        box-sizing: border-box;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
        animation: appear linear;
        animation-timeline: view();
        animation-range: entry 0;
        background-size: cover;


        .img-container {
            
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}




        .article-info{
            padding: 20px;;
            background-color: rgba(0, 0, 0, 0.652);
            display: flex;
            flex-direction: column;
            gap: 10px;
            justify-items: end;
            box-sizing: border-box;
            border-radius: 0px 0px 10px 10px;
        }

        p {
            margin: 0;
            font-size: 16px;
            color: white;
        }

        h3{
            margin: 0;
            font-size: 20px;
            font-weight: bold;
            color: white;
        }
        .underline{
         position: absolute;
        bottom: 0px;
        left: 0;
        height: 0.25rem; /* h-1 */
        width: 0;
        background-color: #4d8b6c;
        transition: all 0.3s;
        border-bottom-left-radius: 0.5rem;
        border-bottom-right-radius: 0.5rem;
     }

        h2{
            margin: 0;
            padding: 0;
        }
    }

    .blog-post:hover{
            transform: translateY(-10px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .blog-post:hover .underline{
            width: 100%;
        }
</style>