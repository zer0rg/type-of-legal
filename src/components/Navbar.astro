    height: 2px;
    background: linear-gradient(to right, #4d8b6c, #6bbd97);
    transform: translateX(-50%);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
}

.navbar-button:hover {
    color: #4d8b6c;
    transform: translateY(-2px);
}

