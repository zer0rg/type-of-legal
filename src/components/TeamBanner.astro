---
import LinkedInIcon from "./icons/LinkedInIcon.astro";
---

<div class="team-banner">
    <div class="team-member member-1">
        <a href="https://www.linkedin.com/in/alejandrosllorens/" target="_blank">
            <div class="linkedin-overlay">
                <LinkedInIcon/>
            </div>
        </a>
      
    </div>
    <div class="team-member member-2">
        <a href="https://www.linkedin.com/in/nerea-vali%C3%B1o-g%C3%B3mez/" target="_blank">
            <div class="linkedin-overlay">
                <LinkedInIcon/>
            </div>
        </a>
    </div>
    <div class="team-member member-3">
        <a href="https://www.linkedin.com/in/luis-seoane-g%C3%B3mez-a4650140/" target="_blank">
            <div class="linkedin-overlay">
                <LinkedInIcon/>
            </div>
        </a>
    </div>
</div>


<style>
    .team-banner{
        display: flex;
        width: 100%;
        flex-wrap: wrap;
   
    }
    .team-member{
        position: relative;
        min-width: 33.3333%;
        max-width: 33.3333%;
        width: 33.3333%;
        aspect-ratio: 1 / 1;
        background-size: cover;
        cursor: pointer;
        


        .linkedin-overlay{
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 20px;
            font-weight: bold;
            background-repeat: no-repeat;
            opacity: 0;
            transition: all 0.3s ease-in-out;


        }
    }



    .team-member:hover .linkedin-overlay{
        opacity: 1;
        transition: all 0.3s ease-in-out;
    }

    .member-1{
        background-image: url('/images/typeoflegal_alejandro_extra_1.jpg');
        
    }

    .member-2{
        background-image: url('/images/typeoflegal_nerea_1.jpg');
        background-position-y: -30px;
    }

    .member-3{
        background-image: url('/images/IMAGEN_LUIS.jpg');
    }

    @media (max-width: 1180px) {
        .team-member{
            min-width: 50%;
            max-width: 50%;
            width: 50%;
        }

        .member-3{
            width: 100%;
            max-width: 100%;
            aspect-ratio: 2 /1;
            background-position: center;
            background-position-y: 0px;
        }
    }


    @media (max-width: 768px) {
        .team-member{
            min-width: 100%;
            max-width: 100%;
            width: 100%;
        }

        .member-3{
            width: 100%;
            max-width: 100%;
            aspect-ratio: 1 /1;
           /* aspect-ratio: 2 /1;*/
        }
    }
</style>