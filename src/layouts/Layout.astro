---
import { ClientRouter } from 'astro:transitions';
interface Props {
	title: string;
	favicon?: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Abogados Nuevas Tecnologías - Somos abogados expertos en derecho digital, propiedad intelectual y nuevas tecnologías">
		<meta name="robots" content="max-image-preview:large">
		<link rel="canonical" href="https://typeoflegal.com/">
		<meta property="og:locale" content="es_ES">
		<meta property="og:site_name" content="Type of Legal - Abogados Nuevas Tecnologías">
		<meta property="og:type" content="article">
		<meta property="og:title" content="Conócenos - Type of Legal">
		<meta property="og:description" content="Abogados Nuevas Tecnologías - Somos abogados expertos en derecho digital, propiedad intelectual y nuevas tecnologías">
		<meta property="og:url" content="https://typeoflegal.com/#about">
		<meta name="twitter:card" content="summary">
		<meta name="twitter:title" content="Conócenos - Type of Legal">
		<meta name="twitter:description" content="Abogados Nuevas Tecnologías - Somos abogados expertos en derecho digital, propiedad intelectual y nuevas tecnologías">
		<ClientRouter />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
