#about{
	background: #f0f5f0de;
	display: flex;
	flex-direction: column;
	align-items: center;
	scroll-margin-top: 90px; /* ajusta según la altura de tu header */


	.about-wrapper{
		width: 100%;
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		position: relative;
		min-height: 60dvh;
		.bg-image{
            position: absolute;
            content: "";
            height: 100%;
            width: 100%;
              /* Fondo degradado base: de #f0f5f0 a white */

  /* Imagen encima */
  background-image: url('/src/assets/images/lorene-farrugia-JpmC-tAHiVA-unsplash.jpg');
  background-position: right center;
  background-size: 50%;
  background-repeat: no-repeat;
  background-blend-mode: normal;

  /* Difuminado de la imagen hacia la izquierda */
  mask-image: linear-gradient(to left, black 10%, transparent 50%);
  -webkit-mask-image: linear-gradient(to left, black 10%, transparent 50%);
        }

		    .content-overlay{
            background: linear-gradient(to right, #f0f5f0de, rgba(255, 255, 255, 0.589));

            position: absolute;
            display: flex;
            justify-content: center;
            width: 100%;
            height: 100%;

            .content-wrapper{
                display: flex;
                align-items: center;
                position: relative;
                width: 100%;
                padding: 0px 20px;
                max-width: 1300px;
                box-sizing: border-box;

                .content{
                    display: flex;
                    flex-direction: column;
                    max-width: 60%;
                    padding: 20px;
                    gap: 15px;
					animation: appear linear;
        animation-timeline: view();
        animation-range: entry 0;

               

                    p{
                        font-weight: bold;
                        color: #5a6b5a;
                        font-size: 20px;
                    }
                    .banner-buttons{
                        display: flex;
                        align-items: center;
                        gap: 20px;

                        button{
                        border-radius: 0.5rem;
                        text-decoration: none;
                        color: #2e3c2e;
                        padding: 12px 22px;
                        text-align: center;
                        vertical-align: text-bottom;
                        font-weight: 600;
                        transition: all 0.3s ease-in-out;
                        outline: none;
                        border: 0;
                        cursor: pointer;
                        }

                        .style1{
                            background-color: #4d8b6c;
                            color: white;

                            
                         }

                        .style1:hover{
                            background-color: #3d6e55;
                            color: white;
                        }

                        .style2{
                            border: 1px solid #4d8b6c;
                            background-color: white;
                            color: #4d8b6c;
                        }

                        .style2:hover{
                            background-color: #d5e3db
                        }
                    }
                }
            }

            h1{
            animation: slide-up 1s ease-out;
            font-size: 2.25rem;        /* text-4xl */
            font-weight: 700;          /* font-bold */
            letter-spacing: -0.015em;  /* tracking-tight */
            color: #2e3c2e;
            }
        }

		.about-content{
			position: absolute;
			z-index: 1000px;
		}

		h2{
			width: 100%;
			margin-bottom: 40px;
		}
		
		p{
			margin: 0;
				font-size: 20px;
				color: #5a6b5a;
				font-weight: bold;
			margin-bottom: 10px;
		}
	}
}

