---
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Página no encontrada - Type of Legal" >
    <Navbar/>
    <main>
        <div class="not-found">
            <h1>404</h1>
            <p>La página que buscas no existe.</p>
            <p>Puedes volver a la <a href="/">página principal</a>.</p>
        </div>
    </main>
</Layout>

<style is:global>
    * {
	font-family: sans-serif;
	overflow: visible !important;

}

main{
	margin-top: 86px;
}
    .not-found{
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 120px;
    }

    h1{
        font-size: 200px;
        font-weight: bold;
        color: #2e3c2e;
    }

    p{
        margin: 0;
        font-size: 20px;
        color: #5a6b5a;
        font-weight: bold;
    }

    a{
        color: #4d8b6c;
    }
</style>