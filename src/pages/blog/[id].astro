---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";

export async function getStaticPaths() {
    const posts = await getCollection("posts");

    return posts.map((post) => ({
        params: { id: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { title, date, author, category , image} = post.data;
const { Content } = await post.render();
---

<Layout title={`${title} - Type of Legal`}>
    <Navbar/>
    <main>
        <div class="post-header"  style={`background-image: url('/public/abogados-startup.webp');`}>
            <div class="post-info">
                <div class="post-info-content">
                    <h1 style="max-width: 850px;">{title}</h1>
                    <p>{date.toLocaleDateString('es-ES', { dateStyle: 'long' })}</p>
                    <p style="font-weight: bold;">{author}</p>
                    <div class="categories">
                        {
                            category.split('|').map((category: any) => {
                                return (
                                    <span class="category">{category}</span>
                                )
                            })
                        }
                    </div>
                </div>
            
            </div>
        </div>
        <article class="markdown-content">
            <Content />
        </article>
    </main>
</Layout>

<style is:global>
        * {
	font-family: sans-serif;
	overflow: visible !important;

}
main{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 96px;
}

.post-header{
    display: flex;
    flex-direction: column;
    justify-content: end;

    width: 100%;
    background-size: cover;
    min-height: 40dvh;
    background-position: center;
    .post-info{
        display: flex;
        justify-content: center;
        background-color: rgba(0, 0, 0, 0.467);
        color: white;
    }

    .post-info-content{
        max-width: 1300px;
        min-width: 1300px;
        display: flex;
        flex-direction: column;
        padding: 20px;
        box-sizing: border-box;
        gap: 10px;

        h1,p {
            margin: 0;
        }
    }
}

.categories{
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 5px;
        
        .category{
            background-color: #4d8b6c;
            padding: 3px 5px;
            border-radius: 5px;
            color: white;
            font-size: 10px;
            font-weight: bold;
        }
    }


    .markdown-content {
  font-size: 1.1rem;
  line-height: 1.75;
  max-width: 800px;
  color: #1a1a1a;
  background-color: #ffffff;
  margin: 2rem auto;
  padding: 1rem;
  text-align: justify;
}

.markdown-content h1,
.markdown-content h2,
.markdown-content h3,
.markdown-content h4,
.markdown-content h5,
.markdown-content h6 {
  color: #111;
  margin-top: 2rem;
  margin-bottom: 1rem;
  line-height: 1.25;
}

.markdown-content h1 {
  font-size: 2.25rem;
  border-bottom: 2px solid #e5e5e5;
  padding-bottom: 0.3rem;
}

.markdown-content h2 {
  font-size: 1.75rem;
  border-bottom: 1px solid #e5e5e5;
  padding-bottom: 0.25rem;
}

.markdown-content h3 {
  font-size: 1.5rem;
}

.markdown-content p {
  margin: 1rem 0;
}

.markdown-content a {
  color: #4d8b6c;
  text-decoration: underline;
}
.markdown-content a:hover {
  text-decoration: none;
}

.markdown-content ul,
.markdown-content ol {
  padding-left: 1.5rem;
  margin: 1rem 0;
}

.markdown-content li {
  margin-bottom: 0.5rem;
}

.markdown-content code {
  background-color: #f4f4f4;
  font-family: 'Courier New', monospace;
  font-size: 0.95rem;
  padding: 0.2em 0.4em;
  border-radius: 4px;
}

.markdown-content pre {
  background-color: #f6f8fa;
  padding: 1rem;
  overflow-x: auto;
  border-radius: 6px;
  margin: 1.5rem 0;
}

.markdown-content blockquote {
  border-left: 4px solid #ddd;
  padding-left: 1rem;
  color: #555;
  margin: 1.5rem 0;
  font-style: italic;
  background: #f9f9f9;
}

.markdown-content img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  margin: 1rem 0;
}

.markdown-content table {
  width: 100%;
  border-collapse: collapse;
  margin: 2rem 0;
}

.markdown-content th,
.markdown-content td {
  border: 1px solid #ddd;
  padding: 0.75rem;
  text-align: left;
}

.markdown-content th {
  background-color: #f3f3f3;
  font-weight: bold;
}

</style>